


<div class="ui container">
  <div class="ui relaxed divided items" id ="search-posts">

    <div id="sort_list">
    <ul>
      <li class="active"><%= link_to"All posts" , articles_path(:type => 'public') %></li>
      <li><%= link_to"My posts" , articles_path(:type => 'my') %></li>
      <li><%= link_to"Shared with me" , articles_path(:type => 'private') %></li>
      <li><%= link_to "Favorites", favorite_articles_path  %></li>
      <li><%= link_to"Top" , articles_path(:type => 'top') %></li>
    </ul>
  </div>
    <%= render @articles %>



 </div>
</div>
<%= will_paginate @articles %>
<script type="text/javascript">
$(document).ready(function(){
 $('.initialjs-avatar').initial();
})

$(document).ready(function(){
    $(function() {
         var p_url = '/'+ window.location.href.substr(window.location.href.lastIndexOf("/")+1);
         $("ul a").each(function(){
              if($(this).attr("href") == p_url  )
              {
                $(this).parent().parent().children().removeClass('active')
                $(this).parent().addClass("active");
              }
         })
  });
  })
</script>
