


<div class="ui container">
  <div class="ui relaxed divided items" id ="search-posts">

    <div class ="headings">
      <div class="ui horizontal list">
         <a class="item"><%= link_to "Favorites", favorite_articles_path, :class => 'navbar-link1'  %></a>
         <a class="item"><%= link_to "Private", articles_path(type: 'private'), :class => 'navbar-link1'  %></a>
         <a class="item"><%= link_to "Public", articles_path(type: 'public'), :class => 'navbar-link1'  %></a>
         <a class="item"><%= link_to "My Posts", articles_path(type: 'my'), :class => 'navbar-link1'  %></a>
         <a class="item"><%= link_to "Top", articles_path(type: 'top'), :class => 'navbar-link1'  %></a>
       </div>

  </div>
   <% @articles.each do |article| %>

         <div class="item">
             <div class="a_content">
              <h3> <a class="ui header"  ><%= link_to truncate(article.title, length: 15) , article_path(article), :class => 'article_name' %></a></h3>
               <div class="meta">
                 <a><%= time_ago_in_words(article.created_at) %> ago</a>
                 <a>Tags: <%= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(' ') %></a>
               </div>
               <div class="description">

               </div>
               <div class="extra">

                  <%#= link_to article.user.username, article.user %><%= article.user.username %>
               </div>
             </div>
             <div class="ui tiny image">
               <div class="ui tiny statistics">
                 <div class="green statistic">
                   <div class="fav_ico">
                     <%= image_tag("Sprite_20px.png", :id => "fav_ico") %>
                   </div>
                   <div class="value">
                     <%#= pluralize article.reputation_for(:votes).to_i,"" %>
                   </div>
                   <div class="label">
                     Votes
                   </div>
                 </div>
               </div>
             </div>
             <div class="ui tiny image">
               <div class="ui tiny statistics">
                 <div class="blue statistic">
                   <div class="comment_ico">
                     <%= image_tag("Sprite_20px.png", :id => "comment_ico") %>
                   </div>
                   <div class="value">
                     <%= article.comments.count %>
                   </div>
                   <div class="label">
                     Comments
                   </div>
                 </div>
               </div>
             </div>
         </div>
<div class = "padding"></div>
     <% end %>
<%= will_paginate @articles %>


 </div>
</div>
<script type="text/javascript">
$(document).ready(function(){
 $('.initialjs-avatar').initial();
})
</script>
