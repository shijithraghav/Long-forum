

<h1 class="ui center aligned header">Favorites</h1>
<div class="ui container">
 <div class="ui relaxed divided items">
   <% @articles.each do |article| %>
         <div class="item">
             <div class="ui tiny image">

                <img data-name="<%= article.title%>" class="initialjs-avatar"/>

             </div>
             <div class="content">
              <h3> <a class="ui header"  ><%= link_to truncate(article.title, length: 15) , article_path(article) %></a></h3>
               <div class="meta">
                 <a><%= time_ago_in_words(article.created_at) %> ago</a>
                 <a>Tags: <%= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(' ') %></a>
               </div>
               <div class="description">

               </div>
               <div class="extra">
                 <div  class="ui circular avatar image">
                   <img data-name="<%= article.user.username %>" class="initialjs-avatar"/>
                 </div>
                  <%#= link_to article.user.username, article.user %><%= article.user.username %>
               </div>
             </div>
             <div class="ui tiny image">
               <div class="ui tiny statistics">
                 <div class="green statistic">
                   <div class="value">
                     <%= pluralize article.reputation_for(:votes).to_i,"" %>
                   </div>
                   <div class="label">
                     Votes
                   </div>
                 </div>
               </div>
             </div>
             <div class="ui tiny image">
               <div class="ui tiny statistics">
                 <div class="blue statistic">
                   <div class="value">
                     <%= article.comments.count %>
                   </div>
                   <div class="label">
                     Comments
                   </div>
                 </div>
               </div>
             </div>
         </div>

     <% end %>



 </div>
</div>
<script type="text/javascript">
$(document).ready(function(){
 $('.initialjs-avatar').initial();
})
</script>
