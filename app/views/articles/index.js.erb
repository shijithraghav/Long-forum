<%if @tags %>
 $('#search-posts').html('<%= j render @articles %>')
<% else %>
$('<%= j render @articles %>').insertBefore( "#infinite-scrolling" );
<% if @articles.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate @articles %>');
<% else %>
  $(window).off('scroll');
  $('.pagination').remove();
<% end %>
<%end %>
