<head>


   <script type="text/javascript" src="http://w2ui.com/src/w2ui-1.4.2.min.js"></script>
<link rel="stylesheet" type="text/css" href="http://w2ui.com/src/w2ui-1.4.2.min.css" />
</head>





<div class="ui container">
  <div class="segments">

    <div class="route_title">
       <%= link_to 'Home >', articles_path, :class => 'navbar-link1' %>
     </div>
     <% unless @article.parent_id == 0 %>
           <div class="route_title">
             <%= link_to  truncate(@article.parent_article.title , :length => 50) , article_path(@article.parent_article)%> >
           </div>
        <% end %>
     <div class ="articlename">
       <%= truncate(@article.title, length: 50) %>
     </div>

  <div class="ui left floated segment">
    <div class="segment1_content">
    <div class="segment_content">
      <div class = "ui header">
        <%= truncate(@article.title, length: 50) %>
      </div>
      <div id="extra">
        <a class ="navbar-link2"><%= time_ago_in_words(@article.created_at) %> ago by</a>
        <a class ="show_ar"><%= @article.user.username %></a>
        <% if @article.user_id == current_user.id %>
        (You)
        <% end %>
      </div>
      <div class="comment_fav_edit">
        <div class="show_fav">
          <div id="fav1">

              <%= render 'favorite' %>

          </div>
        </div>
        <div class="show_comment">
            <div class="com">
            <div id="comment_ico">
            </div>
            <div class="c_value">
                <%= @article.comments.count %>
            </div>
          </div>
        </div>
        <div class = "show_edit">
          <% if @article.user_id == current_user.id %>
          <div class = "item">
            <div id="dropdown">
            <div class="ui simple dropdown item">
              <div id="edit_ico">

              </div>
                <div class="menu" id="dropdown_user">
                  <div class="item"><%= link_to 'Edit Post', edit_article_path(@article), :class => 'navbar-link3'  %></div>
                  <div class="item"><%= link_to 'Delete', article_path(@article),
                 method: :delete,
                 :class => 'navbar-link3',
                 data: { confirm: 'Are you sure?' } %></div>
                </div>
              </div>
            </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="article_text">
        <div class="article_content">
          <%= raw(@article.text) %>
        </div>

      </div>
  </div>
</div>
  <div class="comment_segment">
      <div class ="comment_body">


        <div class="render_c">
        <%=render "comments/comment" %>
        <%= render 'comments/form' %>
      </div>


      </div>


      </div>






  </div>
  <div class="ui right floated segment">
    <div id="side_container">
      <% unless @article.parent_id == 0 %>
  <div class="tag_container">
    <div class="tag_head">
       PARENT TOPIC
    </div>
    <div class="tag_list">
          <div class="parent_post">
            <%= link_to  truncate(@article.parent_article.title , :length => 100) , article_path(@article.parent_article)%>
          </div>
    </div>
  </div>
<% end %>
    <div class="tag_container">
      <div class="tag_head">
     TAGS
  </div>
  <div class="tag_list">
    <%  @article.tag_list.each do |t| %>
       <%=link_to t , tag_path(t) ,class: 'tag' %>
       <%end%>
  </div>
</div>
<% if @article.visibility == "private" &&current_user.id == @article.user_id %>
<div class="share_container">
  <div class="share_head">
     SHARED WITH (<%=@article.invites.count%>)
  </div>
  <div class="user_list">
    <%  @article.invites.each do |t| %>
      <div class="user">
        <%=t.user.email %>
     </div>
       <%end%>
  </div>

  <div class="invite" id="pop">
      + Invite More People
        <div id="pop_body" style="display:none; width: 650px; height: 400px; overflow: auto">
        <div id="invite_heading">
            Invite People
        </div>
        <div id ="invite_search">
          <div style="">
          </div>
            <%= form_tag url_for(invite_articles_path),name:'ds', :remote => true do %>
            <div id= "input_id">
            <div class="ui input">
              <%= autocomplete_field_tag :email, params[:email], autocomplete_user_email_users_path, :class=>"some" , :update_elements => {}, :placeholder =>"Type user's name" %>
           </div>
         </div>
            <%= hidden_field_tag :user_id %>
           <%= hidden_field_tag :article_id, @article.id %>
            <%= hidden_field_tag :status, 'false' %>
            <div id="shared_with"> Shared with :</div>
            <%= submit_tag "Invite" %>
            <% end %>

            <div id ="invited"> </div>
        </div>
    </div>
    </div>
    </div>
    <% end %>





<div class="subpost_container">
  <div class="subpost_head">
     SUBPOSTS (<%=@sub_articles.count%>)
  </div>
  <div class="subpost_list">
    <%  @sub_articles.each do |t| %>
      <div class="subpost">
        <%= %>
        <%=link_to t.title , article_path(t) %>
     </div>
       <%end%>
  </div>
  <div class="new_subpost">
      <%= link_to '+ Create Subposts' , subpostnew_article_path(:parent_type => @article.id) %>
  </div>
</div>




  </div>
</div>
</div>
</div>




<script type="text/javascript">
$(document).ready(function(){


  $('#cform').hide();
  $('.add_comment').click(function() {
                $('#cform').slideToggle("fast");
                $('.add_comment').hide();
                });
  $('#cancel_button').click(function() {
                $('#cform').slideToggle("fast");
                $('.add_comment').show();
                });
  $('#cform').insertBefore('.a');





$('#pop').click(function(){
$('#pop_body').w2popup();

$('.some').bind('railsAutocomplete.select', function(event, data){
    /* Do something here */
       $('input#user_id').val(data.item.id);
      $('form[name=ds]').append('<input type="hidden" name="user_ids['+data.item.id+'][user_id]" , value='+data.item.id+' >');
      $('form[name=ds]').append('<input type="hidden" name="user_ids['+data.item.id+'][article_id]", value= <%= @article.id %> >');
      $('form[name=ds]').append('<input type="hidden" name="user_ids['+data.item.id+'][status]", value= false >');
      $('form[name=ds]').append('<div id ="item">' + data.item.value + '</div>');

    });
// overlay based on the same HTML
});






})

