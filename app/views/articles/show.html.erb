<div class="ui container">  <div class="segments">    <div class="ui horizontal list">       <a class="item"><%= link_to 'Home >', articles_path, :class => 'navbar-link1' %>  %></a>     </div>     <div class ="articlename">       <%= truncate(@article.title, length: 50) %>     </div>  <div class="ui left floated segment">    <div class="segment1_content">    <div class="segment_content">      <div class = "ui header">        <%= truncate(@article.title, length: 50) %>      </div>      <div id="extra">        <a class ="navbar-link2"><%= time_ago_in_words(@article.created_at) %> ago by</a>        <a class ="show_ar"><%= @article.user.username %></a>        <% if @article.user_id == current_user.id %>        (You)        <% end %>      </div>      <div class="comment_fav_edit">        <div class="show_fav">          <div id="fav1">              <%= render 'favorite' %>          </div>        </div>        <div class="show_comment">            <div class="com">            <div id="comment_ico">            </div>            <div class="c_value">                <%= @article.comments.count %>            </div>          </div>        </div>        <div class = "show_edit">          <% if @article.user_id == current_user.id %>          <div class = "item">            <div id="dropdown">            <div class="ui simple dropdown item">              <div id="edit_ico">              </div>                <div class="menu" id="dropdown_user">                  <div class="item"><%= link_to 'Edit Post', edit_article_path(@article), :class => 'navbar-link3'  %></div>                  <div class="item"><%= link_to 'Delete', article_path(@article),                 method: :delete,                 :class => 'navbar-link3',                 data: { confirm: 'Are you sure?' } %></div>                </div>              </div>            </div>            </div>          <% end %>        </div>      </div>      <div class="article_text">        <div class="article_content">          <%= raw(@article.text) %>        </div>      </div>  </div></div>  <div class="comment_segment">      <div class ="comment_body">        <div class="render_c">        <%=render "comments/comment" %>        <%= render 'comments/form' %>      </div>      </div>      </div>  </div>  <div class="ui right floated segment">    <div id="side_container">    <div class="tag_container">      <div class="tag_head">     TAGS  </div>  <div class="tag_list">    <%  @article.tag_list.each do |t| %>       <%=link_to t , tag_path(t) ,class: 'tag' %>       <%end%>  </div></div><div class="share_container">  <div class="share_head">     SHARED WITH (<%=@article.invites.count%>)  </div>  <div class="user_list">    <%  @article.invites.each do |t| %>      <div class="user">        <%=t.user.email %>     </div>       <%end%>  </div>  <div class="invite" data-popup-target="#example-popup">      + Invite More People    </div></div><div class="subpost_container">  <div class="subpost_head">     SUBPOSTS (<%=@sub_articles.count%>)  </div>  <div class="subpost_list">    <%  @sub_articles.each do |t| %>      <div class="subpost">        <%= %>        <%=link_to t.title , article_path(t) %>     </div>       <%end%>  </div>  <div class="new_subpost">      <%= link_to '+ Create Subposts' , subpostnew_article_path(:parent_type => @article.id) %>  </div></div>  </div></div></div></div><div id="example-popup" class="popup">    <div class="popup-body">        <%=render "invite_popup" %>    </div></div><div class="popup-overlay"></div><script type="text/javascript">$(document).ready(function(){  $('#cform').hide();  $('.add_comment').click(function() {                $('#cform').slideToggle("fast");                $('.add_comment').hide();                });  $('#cancel_button').click(function() {                $('#cform').slideToggle("fast");                $('.add_comment').show();                });  $('#cform').insertBefore('.a');})$(document).ready(function(){$('[data-popup-target]').click(function () {       $('html').addClass('overlay');       var activePopup = $(this).attr('data-popup-target');       $(activePopup).addClass('visible');   });   $(document).keyup(function (e) {       if (e.keyCode == 27 && $('html').hasClass('overlay')) {           clearPopup();       }   });   $('.popup-exit').click(function () {       clearPopup();   });   $('.popup-overlay').click(function () {       clearPopup();   });   function clearPopup() {       $('.popup.visible').addClass('transitioning').removeClass('visible');       $('html').removeClass('overlay');       setTimeout(function () {           $('.popup').removeClass('transitioning');       }, 200);   }})/*$(document).ready(function(){  $('#cinvite').hide();  $('.invite').click(function() {                $('#cinvite').slideToggle("fast");                $('.invite').hide();                });  $('#icons').click(function() {                $('#cinvite').slideToggle("fast");                $('.invite').show();                });  $('#cinvite').insertBefore('.subpost_list');})*/</script>