<div class="ui container">    <div class = "ui segment">        <h1 class="ui left aligned green header">          <%= @article.title %>        </h1>        <div class="ui clearing divider"></div>        <div class="content">          <%= raw(@article.text) %>        </div>        <div class="actions">          <%  @article.tag_list.each do |t| %>          <%=link_to t , tag_path(t) ,class: 'ui blue  label' %>          <%end%>        </div>        <div class="fav_content">          <div id="fav1">            <%= render 'favorite' %>          </div>        </div>       <%#= form_tag(controller: "articles", action: "favorite", method: "post") do %>    <%#= submit_tag "Favorite"%><%# end %>        <div id = "votes">      <%= render 'votes' %>        </div>        <div class ="sub_post">          <%= link_to ('<button class = "ui right floated button">Add Sub Post</button>').html_safe , subpostnew_article_path(@article.id), data: {method: "get"}  %>          <h3 class="ui left aligned blue header">            Subposts          </h3>          <% @subarticles.each do |subarticle| %>           <%= link_to subarticle.title, article_path(subarticle) %>          <div class="ui divider"></div>          <% end %>      </div> <% if @article.visibility == "private" &&current_user.id == @article.user_id %>     <div class="ui action input">       <%= form_tag url_for(invite_articles_path), :remote => true do %>         <%= select_tag "user_id", options_from_collection_for_select(@users, "id", "email") %>         <%= hidden_field_tag :article_id, @article.id %>         <%= hidden_field_tag :status, 'false' %>         <%= submit_tag "Invite" %>       <% end %>     </div>     <div id ="invited"> </div>   <% end %>   <% if @article.user_id == current_user.id %>         <%= link_to ('<i class="large black edit icon"></i>').html_safe, edit_article_path(@article) %>       <%= link_to ('<i class="large red remove icon"></i>').html_safe, article_path(@article),                 method: :delete,                 data: { confirm: 'Are you sure?' } %>       <% end %>        <div class = "comments">          <%#= render @article.comments %>          <%= render 'comments/comment' %>          <%= render 'comments/form' %>        </div><% if @article.user_id == current_user.id %>        <%= link_to 'Edit', edit_article_path(@article) %> |        <%= link_to 'Back', articles_path %>      <% end %>    </div></div>