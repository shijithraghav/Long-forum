

<%= form_for @article do |f| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<p>
  <div class="ui form">
    <div class="field">

        <label><%= f.label :title %><br></label>
        <%= f.text_field :title %>
      </p>
      <p>
      <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <ul id = "article-tags"></ul>
    </p>
<p>
  <label><%= f.label :text %><br></label>
  <%= f.cktext_area :text, :class => 'someclass', :toolbar => 'mini', :ckeditor => {:language => 'english', } %>
</p>

<div class="field">
             <%= f.select :visibility, options_for_select([["Public", "public"], ["Private", "private"]]) %>
         </div>


<div class="actions">
  <button class="ui button medium fluid blue" type="submit">Create</button>
</div>

</div>
</div>
</div>


<% end %>
