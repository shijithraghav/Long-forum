


<div class="ui container">
  <div class="segments">
    <div id="route_info">
      <div class="route_home">
        <%= link_to 'Home >', root_url%>
      </div>
      <div class="route_title">
        User Profile
      </div>
    </div>


    <div class ="left_segment">
      <div class="head-mail">
      <div class = "ui header">
        <%= current_user.username %>
      </div>
      <div class= "mailid" >
        <%= current_user.email %>
      </div>
    </div>
     <div class="user_posts">
       <div class="posts_count">

          <%= current_user.articles.count %> Posts
       </div>

     </div>
     <div class ="change_sett">
       <div class ="sett">
         Change Settings
       </div>
     </div>


    </div>
    <div class="right_segment">
      <div class="user_invite_head">
        <div class="in_heading">
          INVITATIONS(  <%= current_user.invites.where(:status => 'false').count %>)
        </div>
      </div>
      <div class="all_invites">
        <% @invites.each do |invite| %>
        <div class="each_invites">
        <div class="each_invites_u">
          <div class="invited_p">
              <div id="invited_p"><%= invite.article.user.username %></div>
                <div id="invited_a">invited you to join his post</div>
          </div>
          <div class="invite_link1">  <a class ="invite_link"><%= time_ago_in_words(invite.created_at) %> ago</a></div>
        </div>
        <div class="each_invites_topic">
            <div class="topic">
                <%= invite.article.title %>
            </div>

        </div>


          <div class ="each_invites_c">
          <div class="accept_invite">
                  <div class="accepted"><%= link_to "Accept" ,  invite_accepted_article_path(invite_id:invite.id), class:"s", method: "post"  %></div>
                  <div class="rejected"><%= link_to "Reject" ,  invite_reject_article_path(invite_id:invite.id), class:"s", method: "delete"  %></div>
          </div>
        </div>

        </div>
        <% end %>


      </div>
      <div class ="page">
        <div class="digg_pagination">
            <%= will_paginate @invites, :container => false %>
        </div>
      </div>

    </div>


  </div>
</div>
