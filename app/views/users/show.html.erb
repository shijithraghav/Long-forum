


<div class="ui container">
<div class="ui card">
  <div class="image">
    <img src="/images/kristy.png">
  </div>
  <div class="content">
    <a class="header">Kristy</a>
    <div class="meta">
      <span class="date">Joined in 2013</span>
    </div>
    <div class="description">
      Kristy is an art director living in New York.
    </div>
  </div>
  <div class="extra content">
    <a>
      <i class="user icon"></i>
      22 Friends
    </a>
  </div>
</div>


<table class="ui basic table">
  <thead>
    <tr>
      <th>Article</th>
      <th>Accept</th>
      <th>Reject</th>
    </tr>
  </thead>
  <tbody>
    <% @invites.each do |invite| %>
    <tr>
      <td><%= invite.article.title %></td>
      <td> <%= link_to "Accept" ,  invite_accepted_article_path(invite_id:invite.id),method: "post"  %> </td>
      <td><%= link_to "Reject" ,  invite_reject_article_path(invite_id:invite.id),method: "delete"  %></td>
    </tr>
  <% end %>
    </tr>
  </tbody>
</table>
</div>
